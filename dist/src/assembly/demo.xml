<assembly xmlns="http://maven.apache.org/ASSEMBLY/2.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
          xsi:schemaLocation="http://maven.apache.org/ASSEMBLY/2.0.0 http://maven.apache.org/xsd/assembly-2.0.0.xsd">
    <id>demo</id>
    <formats>
        <format>zip</format>
        <format>tar.gz</format>
    </formats>
    <fileSets>
        <!-- demo-client -->
        <fileSet>
            <directory>../demo/client/target/dependency</directory>
            <outputDirectory>client/lib</outputDirectory>
        </fileSet>
        <fileSet>
            <directory>../demo/client/target</directory>
            <outputDirectory>client/lib</outputDirectory>
            <includes>
                <include>*.jar</include>
            </includes>
            <excludes>
                <exclude>*-sources.jar</exclude>
                <exclude>*-tests.jar</exclude>
            </excludes>
        </fileSet>
        <fileSet>
            <directory>../demo/client/target/classes</directory>
            <outputDirectory>client</outputDirectory>
            <includes>
                <include>*.bat</include>
                <include>*.sh</include>
            </includes>
            <fileMode>0744</fileMode>
        </fileSet>
        <fileSet>
            <directory>..</directory>
            <includes>
                <include>LICENSE*</include>
                <include>README*</include>
            </includes>
            <outputDirectory>.</outputDirectory>
        </fileSet>
        <!-- demo-server -->
        <fileSet>
            <directory>../demo/server/target</directory>
            <outputDirectory>server</outputDirectory>
            <includes>
                <include>*.war</include>
            </includes>
        </fileSet>
    </fileSets>
</assembly>
